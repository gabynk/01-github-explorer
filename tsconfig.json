{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // transição, pode ter js
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true, // modo de lidar com erro javascript
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ // onde os códigos da aplicação está
    "src"
  ]
}